

<div class="content">
  <div class="row">
      <div class="col">
          <%= render 'layouts/header' %>
      </div>
  </div>
<p id="notice"><%= notice %></p>

<h1>Experiences</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Description</th>
      <th>Office</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.company %></td>
        <td><%= experience.description %></td>
        <td><%= experience.office %></td>
        <td><%= link_to 'Show', experience %></td>
        <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
        <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Experience', new_experience_path %>


</div>
<div class="row footer">
  <div class="col">
      <%= render 'layouts/footer' %>
  </div>
</div>